// Google
model Google {
  id          String @id @default(uuid())
  name        String
  google_id   String
  picture     String

  @@map("google_users")
  google_messages Message[]
}

model Message {
  id          String @id @default(uuid())
  text        String
  created_at  DateTime @default(now())

  user Google @relation(fields: [user_id], references: [id])

  @@map("messages")
  user_id String
}

