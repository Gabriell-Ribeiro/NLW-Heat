datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

// Github e Google
model User {
  id              String @id @default(uuid())
  name            String
  user_oauth_id   String
  avatar_url      String

  // nome da tabela
  @@map("users_oauth")
  
  messages Message[]
}

model Message {
  id              String @id @default(uuid())
  text            String
  created_at      DateTime @default(now())

  user User @relation(fields: [user_id], references: [id])

  @@map("messages")
  user_id         String
}
